<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ervalsa.mov">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MOV">
        <activity android:name=".ui.home.wallet.WalletSuccessActivity"></activity>
        <activity android:name=".ui.home.wallet.WalletTopUpActivity" />
        <activity android:name=".ui.home.wallet.MyWalletActivity" />
        <activity android:name=".ui.home.checkout.CheckoutSuccessActivity" />
        <activity android:name=".ui.home.ticket.TicketDetailActivity" />
        <activity android:name=".ui.home.checkout.CheckoutActivity" />
        <activity android:name=".ui.home.detail.PilihBangkuActivity" />
        <activity android:name=".ui.home.detail.DetailActivity" />
        <activity android:name=".ui.sign.signup.SignUpPhotoActivity" />
        <activity android:name=".ui.sign.signup.SignUpActivity" />
        <activity android:name=".ui.sign.signin.SignInActivity" />
        <activity android:name=".ui.onboarding.OnboardingActivity" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>